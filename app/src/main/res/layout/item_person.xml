<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/padding_small"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/personAvatarImage"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:scaleType="centerCrop"
        android:background="@drawable/photo_placeholder"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/personName"
        style="@style/type_b16"
        android:singleLine="true"
        android:ellipsize="end"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_medium"
        android:layout_marginBottom="@dimen/padding_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/personAvatarImage"
        app:layout_constraintStart_toStartOf="@+id/personAvatarImage"
        app:layout_constraintTop_toBottomOf="@+id/personAvatarImage"
        tools:text="Max" />

</androidx.constraintlayout.widget.ConstraintLayout>