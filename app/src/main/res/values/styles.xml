<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="type_b16">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="type_b24">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="default_button" parent="type_b16">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="regular_text_input_edit_text">
        <item name="android:textColorHint">@color/darkGray</item>
        <item name="android:paddingStart">@dimen/padding_regular</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingEnd">@dimen/padding_regular</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>